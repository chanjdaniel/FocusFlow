{
    "manifest_version": 3,
    "name": "FocusFlow",
    "description": "Improves readability of online text using bionic reading",
    "version": "1.0",
    "action": {
      "default_icon": "focusflow-icon.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content-script.js", "background.js", "remove-child.js"]
      }
    ],
    "permissions": ["scripting", "activeTab"]
  }