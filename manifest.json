{
    "manifest_version": 3,
    "name": "FocusFlow",
    "description": "Reading made easier",
    "version": "1.0",
    "action": {
      "default_icon": "focusflow-icon.png",
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content-script.js", "background.js","remove-child.js"]
      }
    ],
    "permissions": ["scripting", "activeTab"]
  }
